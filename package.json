{
  "name": "pixelforge-ai-studio",
  "description": "A Editor for Pixelbased Assets.",
  "author": "Involvex",
  "repository": {
    "url": "https://github.com/involvex/PixelForge-AI-Studio.git",
    "type": "git"
  },
  "license": "MIT",
  "private": true,
  "version": "0.1.1",
  "type": "module",
  "main": "dist/electron/main.js",
  "scripts": {
    "start": "cross-env NODE_ENV=development vite",
    "dev": "cross-env NODE_ENV=development vite",
    "build": "vite build",
    "test": "playwright test",
    "build:production": "npx vite build --mode production",
    "build:gh-pages": "cross-env GITHUB_ACTIONS=true npm run build:production",
    "preview": "vite preview",
    "lint": "eslint . -c eslint.config.ts --ext .ts,.tsx,.js --ignore-pattern 'dist/**'",
    "lint:fix": "eslint . -c eslint.config.ts --ext .ts,.tsx,.js --fix --ignore-pattern 'dist/**'",
    "format": "prettier --write .",
    "format:imports": "prettier --write --plugin=prettier-plugin-organize-imports .",
    "typecheck": "tsc --noEmit",
    "format:check": "prettier --check .",
    "prebuild": "npm run lint && npm run typecheck && npm run format",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "compile:electron": "tsc -p tsconfig.electron.json && tsc -p tsconfig.preload.json",
    "start:electron": "npm run compile:electron && cross-env NODE_ENV=development electron dist/electron/main.js",
    "dev:electron": "concurrently \"npm run dev\" \"npm run compile:electron && wait-on http://localhost:3005 && cross-env NODE_ENV=development electron dist/electron/main.js\"",
    "build:electron": "cross-env ELECTRON=true npm run build && npm run compile:electron && electron-builder -c electron-builder.yml",
    "build:electron:portable": "cross-env ELECTRON=true npm run build && npm run compile:electron && electron-builder --win portable -c electron-builder.yml",
    "electron:debug": "concurrently \"cross-env NODE_ENV=development\" \"npm run dev:electron\"",
    "prepare": "husky",
    "preversion": "npm run format:check && npm run lint:fix && npm run typecheck",
    "biome:check": "biome check .",
    "biome:fix": "biome check . --fix",
    "biome:format": "biome format . --write"
  },
  "dependencies": {
    "@google/genai": "^1.31.0",
    "@tailwindcss/postcss": "^4.1.18",
    "cross-env": "^10.1.0",
    "cssnano": "^7.1.2",
    "dotenv": "^17.2.3",
    "electron-log": "^5.4.3",
    "gifenc": "^1.0.3",
    "is-electron": "^2.2.2",
    "jiti": "^2.6.1",
    "jszip": "3.10.1",
    "lucide-react": "^0.556.0",
    "rc-dock": "^4.0.0-alpha.2",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-toastify": "^11.0.5",
    "update-electron-app": "^3.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@eslint/css": "^0.14.1",
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@playwright/test": "^1.57.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.0.0",
    "autoprefixer": "^10.4.22",
    "concurrently": "^9.2.1",
    "electron": "^39.2.6",
    "electron-builder": "^26.3.4",
    "electron-debug": "^4.1.0",
    "electron-is-dev": "^3.0.1",
    "eslint": "^9.39.1",
    "eslint-plugin-html": "^8.1.3",
    "eslint-plugin-no-unused-expressions": "^0.1.0",
    "eslint-plugin-react": "^7.37.5",
    "gh-pages": "^6.3.0",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "prettier": "^3.7.4",
    "prettier-plugin-organize-imports": "^4.3.0",
    "sharp": "^0.34.5",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.48.1",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  },
  "files": [
    "/dist/**/*"
  ]
}
